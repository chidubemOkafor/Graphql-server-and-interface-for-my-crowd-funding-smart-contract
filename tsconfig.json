{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "types": ["node"],
    "module": "ESNext",  // or "ES6"
    "target": "ES2020",  // or higher like ES2022
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  } 
}