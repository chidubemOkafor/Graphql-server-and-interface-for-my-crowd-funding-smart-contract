{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "types": ["node"],
    "module": "CommonJS",  // or "ES6"
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules"]
}